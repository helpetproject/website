              <i class="fa fa-paw fa-5x" aria-hidden="true"  id="fontawesome_paw_medkit"></i>
            </div>
            <div class="col-md-12">
              <p class="cards-centers"><%= link_to 'Hogares de Adopción', static_pages_adoption_homes_path, class: 'white-text' %></p>

              <i class="fa fa-hospital-o fa-5x" aria-hidden="true" id="fontawesome_hospital"></i>
            </div>
            <div class="col-md-12">
              <p class="cards-centers"><%= link_to 'Centros de Diagnóstico', static_pages_diagnostic_centers_path, class: 'blue-text' %></p>

            <div class="col-md">
              <i class="fa fa-medkit fa-5x" aria-hidden="true" id="fontawesome_paw_medkit"></i>
            </div>
            <div class="col-md-12">
              <p class="cards-centers"><%= link_to 'Centros de Cirugía', static_pages_surgery_centers_path, class: 'white-text' %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
